# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/affiliate_db
# Or use MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database_name

# Client Endpoint (React app URL)
CLIENT_ENDPOINT=http://localhost:3000

# JWT Secret (generate a new UUID from https://www.uuidgenerator.net/)
JWT_SECRET=your-secret-key-here

# Gmail Configuration for Nodemailer
# You need to enable 2FA and create an App Password: https://myaccount.google.com/apppasswords
GMAIL_EMAIL_ID=your_email@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password

# Google OAuth Configuration
# Get this from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
